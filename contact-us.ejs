<%- include('./partials/header') %>

<style>
    body {
          background-image: url(../images/cotactx.png);
          background-repeat: no-repeat;
          background-size: cover;
          background-position: center;
    }
    label {
        color: #fff;
    }
</style>

<div class="container">
	<div class="column">
		<h1 id="updatePage" style="text-align: center; color: white;">
			Contact us
		</h1><hr style="background-color: white;">
        <form action="/contact" method="POST" role="form" class="eventform" style="margin: 60px auto;"> 
            <div class="form-group">
                <label for="name">Your name</label>
                <input type="text"  class="form-control" id="name" name="name" placeholder="Your Name" required>
            </div>
			<div class="form-group">
                <label for="email">Your Email</label>
                <input type="email"  class="form-control" id="email" name="email" placeholder="lucifer@gmail.com" required>
            </div>
            <div class="form-group">
                <label for="number">Contact Number</label>
                <input type="tel"  class="form-control" id="number" name="number" placeholder="Your contact number" required>
            </div>
            <div class="form-group">
                <label for="subject">Subject</label>
                <input type="text"  class="form-control" id="subject" name="subject" placeholder="Subject">
            </div>
            <div class="form-group">
                <label for="message">Your Message</label>
                <textarea type="text" class="form-control" rows="5" cols="50" id="message" name="message" style="resize: none;"></textarea>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Send</button>
            <a href="/" style="color: white;">Go Back</a>
		</form>	
	</div>
</div>

<%- include('./partials/footer') %>